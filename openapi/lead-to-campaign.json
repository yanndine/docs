{
  "openapi": "3.0.0",
  "info": {
    "title": "Campaign Management API",
    "description": "API for managing leads and campaigns",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-api-domain.com/api"
    }
  ],
  "paths": {
    "/lead-to-campaign": {
      "post": {
        "summary": "Add Lead to Campaign",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LeadToCampaignRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lead successfully added to campaign",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - API key issue, contact admin",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LeadToCampaignRequest": {
        "type": "object",
        "properties": {
          "apiKey": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "hubspot",
              "prosp",
              "linkedinUrl"
            ]
          },
          "id": {
            "type": "string"
          },
          "campaign_id": {
            "type": "string"
          }
        },
        "required": [
          "apiKey",
          "type",
          "id",
          "campaign_id"
        ]
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "success"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "error message"
          }
        }
      }
    }
  }
}